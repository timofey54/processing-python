radius=500
clr1=255
clr2=255
clr3=255
def setup():
    size(500,500)
def draw():
    global radius,clr1,clr2,clr3
    circle(250,250,radius)
    fill(clr1,clr2,clr3,)
    radius=radius-0.1
    clr1=clr1-1
    clr2=clr2-1
    clr3=clr3-1
    
    другой вариант:
    radius=500
clr=255
def setup():
    size(500,500)
def draw():
    global radius,clr
    circle(250,250,radius)
    fill(clr)
    radius=radius-1
    clr=clr-1
